    result.Text = "Äang táº£i dá»¯ liá»‡u kill..."

    -- Status vÃ²ng orbit
    local orbitStatus = Instance.new("TextLabel", main)
    orbitStatus.Position = UDim2.new(0,20,0,160)
    orbitStatus.Size = UDim2.new(1,-40,0,30)
